{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/EGD2024/edb-public/schema/v1.0.0",
  "title": "EDB-P Test Case Schema (Public)",
  "description": "JSON Schema for Energy Decision Benchmark public test cases. Note: evaluation_criteria are withheld for benchmark integrity.",
  "type": "object",
  "required": ["id", "version", "domain", "scenario_type", "difficulty", "input", "metadata"],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^edb-p-[0-9]{3}$",
      "description": "Unique test case identifier"
    },
    "version": {
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$",
      "description": "Semantic version"
    },
    "domain": {
      "type": "string",
      "enum": ["electricity", "gas", "solar", "mobility", "water", "equipment"],
      "description": "Energy domain"
    },
    "scenario_type": {
      "type": "string",
      "description": "Type of decision scenario"
    },
    "difficulty": {
      "type": "string",
      "enum": ["easy", "medium", "hard"],
      "description": "Test case difficulty level"
    },
    "input": {
      "type": "object",
      "required": ["context", "query"],
      "properties": {
        "context": {
          "type": "object",
          "description": "Contextual data for the decision"
        },
        "query": {
          "type": "string",
          "description": "User question or request"
        }
      }
    },
    "metadata": {
      "type": "object",
      "required": ["created_at", "difficulty_score", "tags"],
      "properties": {
        "created_at": {
          "type": "string",
          "format": "date"
        },
        "difficulty_score": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        },
        "tags": {
          "type": "array",
          "items": {"type": "string"}
        },
        "notes": {
          "type": "string"
        }
      }
    }
  }
}
