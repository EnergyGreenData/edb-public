{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/EnergyGreenData/edb-public/schema/v1.0.0",
  "title": "EDB-P Test Case Schema (Public)",
  "description": "JSON Schema for Energy Decision Benchmark public test cases. Note: evaluation_criteria are withheld for benchmark integrity.",
  "type": "object",
  "required": ["case_id", "dimension", "scenario_type", "context", "input_data"],
  "properties": {
    "case_id": {
      "type": "string",
      "pattern": "^edb-p-[0-9]{3}$",
      "description": "Unique test case identifier"
    },
    "dimension": {
      "type": "string",
      "enum": [
        "logical_consistency",
        "counterfactual_robustness",
        "regulatory_compliance",
        "data_sufficiency",
        "temporal_prediction",
        "multiturn_coherence"
      ],
      "description": "Evaluation dimension being tested"
    },
    "scenario_type": {
      "type": "string",
      "description": "Type of decision scenario"
    },
    "context": {
      "type": "object",
      "required": ["country", "domain", "user_type"],
      "properties": {
        "country": {
          "type": "string",
          "description": "Country code (ISO 3166-1 alpha-2)"
        },
        "domain": {
          "type": "string",
          "enum": ["electricity", "gas", "solar", "mobility", "water", "equipment"],
          "description": "Energy domain"
        },
        "user_type": {
          "type": "string",
          "enum": ["residential", "commercial", "industrial"],
          "description": "Type of energy user"
        }
      }
    },
    "input_data": {
      "type": "object",
      "description": "Input data for the test case. Structure varies by dimension - see dataset/README.md for field details per dimension."
    }
  }
}
